@model BaiTapTuan7.Models.tb_Student
@{
    ViewBag.Title = "StudentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table table-hover">
    <h2>StudentList</h2>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.FirstName)</th>
                                    <th>@Html.DisplayNameFor(m => m.LastName)</th>
                                    <th>@Html.DisplayNameFor(m => m.Gmail)</th>
                                    <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                                    <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                                    <th>@Html.DisplayNameFor(m => m.PlaceOfBirth)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.StudentList)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Gmail</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.DateOfBirth</td>
                                        <td>@item.PlaceOfBirth</td>
                                        <td>
                                            <a href="@Url.Action("EditUser","Admin",new { Id = item.UserId })"> Edit</a>|
                                            @Html.ActionLink("Remove", "RemoveUser", new { Id = item.UserId }, new { onclick = "return confirm('Are you sure to delete this user?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
