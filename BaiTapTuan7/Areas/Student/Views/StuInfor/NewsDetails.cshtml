@model BaiTapTuan7.Models.tb_News
@{
    ViewBag.Title = "NewsDetails";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}
<div class="container-fluid">
    <div id="content">
        <h2> News Details</h2>
        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">@Model.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="inputdate">
                            <div class="small text">
                                [Date: @Model.CreatedDate]
                            </div>
                        </div>
                        <table>
                            <tbody>
                                <tr>
                                    <td height="22" align="left">
                                        <span class="content"> @Html.Raw(Model.Details)</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">News</h5>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table">
                            @foreach (var item in ViewBag.newsList)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("NewsDetails","StuInfor",new { newsid = item.News_Id})" class="fa-hacker-news">
                                            @item.Title
                                        </a>
                                        <br />
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
