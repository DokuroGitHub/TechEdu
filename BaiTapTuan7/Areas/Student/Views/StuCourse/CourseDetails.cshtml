
@model BaiTapTuan7.Models.tb_Course
@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}


<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <h2>@Model.Course_Name</h2>
       @Html.ActionLink("Assignment","CourseAssignment",new { couid = Model.Course_Id},new { @class ="btn btn-primary"})
        <div class="col-12">
            <h3>Teacher: @(ViewBag.Teacher.TeacherFirstName + " " + ViewBag.Teacher.TeacherLastName)</h3>
            <div class="card">
                <div class="card-body">
                    @Html.DisplayFor(m => m.Decription)
                </div>
            </div>
        </div>
    </div>
</div>