@model PagedList.IPagedList<BaiTapTuan7.Models.tb_Teacher>
@using PagedList.Mvc
@{
    ViewBag.Title = "Teacher";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="table table-hover">
    <h2>Teacher List</h2>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lists of teacher</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Gmail</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr onclick="location.href = '@Url.Action("Details","Teacher",new { id = item.TeacherId})'">
                                        <td>@item.TeacherFirstName</td>
                                        <td>@item.TeacherLastName</td>
                                        <td>@item.Gmail</td>
                                        <td>
                                            @Html.ActionLink("Remove", "Delete", "Teacher", new { id = item.TeacherId }, new { onclick = "return confirm('Are you sure to remove this teacher?');", @class = "btn btn-danger" })
                                            @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-l" value="@item.StudentId">Details</button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_paginate">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
