@model PagedList.IPagedList<BaiTapTuan7.Models.tb_Course>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="table table-hover">
    <h2>Course</h2>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List Of Course</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Course name</th>
                                    <th>Teacher</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr onclick="location.href='@(Url.Action("Details","Course",new {Id = item.Course_Id }))'">
                                    <td>@item.Course_Name</td>
                                    <td>
                                        @foreach (var i in ViewBag.teacherList)
                                        {
                                            if (item.TeacherId == i.TeacherId)
                                            {
                                                @(i.TeacherFirstName +' '+ i.TeacherLastName);
                                            }
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_paginate">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
