            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.To, (List<SelectListItem>)ViewBag.RoleList, new { htmlattributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

