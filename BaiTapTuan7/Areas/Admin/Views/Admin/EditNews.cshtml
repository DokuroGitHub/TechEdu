@model BaiTapTuan7.Models.tb_News

@{
    ViewBag.Title = "EditNews";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditNews</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>tb_News</h4>
