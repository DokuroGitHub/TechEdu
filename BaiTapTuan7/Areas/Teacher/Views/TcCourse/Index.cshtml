@model List<BaiTapTuan7.Models.tb_Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-5">
            <h3 class="page-title">My Course</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","TcInfor")">Home</a></li>
                        <li class="breadcrumb-item active" aria-page="current"><a href="@Url.Action("Index","TcCourse")">Course</a></li>

                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        @item.Course_Name
                    </div>
                    <div class="card-body">
                        <p class="card-text">@item.Decription</p>
                        <a href="@Url.Action("CourseDetails","TcCourse",new { couid = item.Course_Id})" class="btn btn-primary">Go To Course</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>